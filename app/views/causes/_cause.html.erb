<div class="box box-small">
	<p>
		<%= link_to (image_tag cause.image(:medium)), cause %>
	</p>
	<p>
		<%= cause.cause_name %> <i>from</i> <%= cause.cause_country %>
	</p>
	<% if current_user == cause.user %>
		<p>
		<%= link_to 'Edit', edit_cause_path(cause) %>
		<%= link_to 'Delete', cause, method: :delete, data: { confirm: 'Are you sure you want to delete?' } %>
		</p>
	<% end %>
</div>