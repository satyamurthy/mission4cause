<div class="well">
<h2>Sign up, we are excited to have you on board!</h2>
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :mugshot_file_size, class: "alert alert-error" %>
  <%= f.full_error :mugshot_content_type, class: "alert alert-error" %>

  <%= f.input :name %>
  <%= f.input :mugshot, label: "Profile Picture" %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.input :punchline, as: :text, input_html: { :maxlength => 200, rows: "3" }, :placeholder => '200 characters only', label: "My motto"  %>
  <%= f.input :usercountry, label: "I am from" %>
  <%= f.input :heartcause, label: "I fight for", :placeholder => 'Eg. Hunger, Poverty...' %>

  <div class="form-actions">
    <%= f.submit "Sign Up", class: "btn btn-large btn-info" %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>